<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!-- TextView Nama Mahasiwa -->

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
        <TextView
            android:id="@+id/txt_nama_tempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="100dp"
            />

        <!-- TextView Npm Tempat -->
        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="100dp"
            />



        <!-- TextView NoHp Tempat -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/ic_substract"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"

                />

            <Button
                android:id="@+id/txt_jarak"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/ic_placeholder_for_map"
                android:textSize="8dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="100dp"

                />

            <Button
                android:id="@+id/txt_direct"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/colorOrange"
                android:text="@string/direct_me"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"/>

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>